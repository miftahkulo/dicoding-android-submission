<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:strokeColor="@color/colorBackground"
    app:strokeWidth="1dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <View
                android:id="@+id/item_movie_shim_1"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="@color/colorBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/item_movie_shim_2"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorBackground"
                app:layout_constraintStart_toEndOf="@id/item_movie_shim_1"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/item_movie_shim_3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_movie_shim_1"
                app:layout_constraintTop_toBottomOf="@id/item_movie_shim_2" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_movie_shim_1"
                app:layout_constraintTop_toBottomOf="@+id/item_movie_shim_3" />

            <View
                android:id="@+id/img_star"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="0dp"
                android:background="@color/colorBackground"
                app:layout_constraintBottom_toBottomOf="@+id/item_movie_shim_1"
                app:layout_constraintStart_toEndOf="@+id/item_movie_shim_1" />

            <View
                android:id="@+id/item_movie_shim_4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:background="@color/colorBackground"
                app:layout_constraintBottom_toBottomOf="@+id/item_movie_shim_1"
                app:layout_constraintStart_toEndOf="@+id/img_star" />

            <View
                android:id="@+id/item_movie_shim_5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="0dp"
                android:background="@color/colorBackground"
                app:layout_constraintBottom_toBottomOf="@+id/item_movie_shim_1"
                app:layout_constraintStart_toEndOf="@+id/item_movie_shim_4" />

            <View
                android:id="@+id/view2"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:background="@color/colorBackground"
                app:layout_constraintBottom_toBottomOf="@+id/item_movie_shim_1"
                app:layout_constraintStart_toEndOf="@+id/item_movie_shim_5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</com.google.android.material.card.MaterialCardView>
