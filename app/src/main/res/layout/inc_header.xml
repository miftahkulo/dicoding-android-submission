<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/appbarHeight"
    android:elevation="@dimen/elevationTiny"
    app:cardElevation="@dimen/elevationTiny"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tv_title_appbar"
        style="@style/TextHeadingPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/marginNormal"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="@dimen/paddingSmall"
        android:focusable="true"
        android:letterSpacing="0.2"
        android:padding="@dimen/paddingSmall"
        android:text="@string/app_name"
        android:textSize="@dimen/textExtraLarge"
        android:textStyle="bold"
        android:translationZ="999dp"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:drawableTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.cardview.widget.CardView>